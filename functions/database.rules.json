{
  /* Visit https://firebase.google.com/docs/database/security to learn more about security rules. */
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        "devices":  {
          ".write": "$uid === auth.uid"
        },
        "online":  {
          ".write": "$uid === auth.uid"
        },
        "role":  {
          ".write": false
        }
      }
    }
  }
}
